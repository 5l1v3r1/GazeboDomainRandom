<?xml version="1.0"?>

<robot name="macroed_box" xmlns:xacro="http://ros.org/wiki/xacro">
	<!--
	<xacro:arg name="color" default="Blue"/>
	<xacro:arg name="name" default="BOX1"/>
	-->
	
	<xacro:macro name="simple_box" params="name color">
		<link name="box_${name}">

		  <inertial>
		    <origin xyz="2 0 0" />
		    <mass value="10.0" />
		    <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
		  </inertial>

		  <visual>
		    <origin xyz="2 0 1"/>
		    <geometry>
		      <box size="1 1 2" />
		    </geometry>
		    
		  </visual>

		  <collision>
		    <origin xyz="2 0 1"/>
		    <geometry>
		      <box size="1 1 2" />
		    </geometry>
		  </collision>
		</link>

		<gazebo reference="box_${name}">
		  <material>Gazebo/${color}</material>
		</gazebo>

	</xacro:macro>
	
	
	<xacro:simple_box name="$(arg name)" color="$(arg color)"/>
	
</robot>




